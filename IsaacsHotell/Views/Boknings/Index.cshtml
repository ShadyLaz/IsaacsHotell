@model IEnumerable<IsaacsHotell.Models.Bokning>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Incheckning)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utcheckning)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gäst)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Incheckning)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utcheckning)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gäst.Förnamn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rum.Namn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
